(defun count_collatz $numer {
  (defvar $steps 0)
  (defvar $current $numer)
  (exit)

  (while 1 {
    (setvar $current (collatz $current))
    (setvar $steps (+ $steps 1))
    ; (print $current) 
    (if (= $current 1) {
      (return $steps)   
    })
  })
})

(defun collatz $num {
  (if (= (% $num 2) 0) {
    (return (/ $num 2))   
  } else {
    (return (+ (* $num 3) 1))   
  })
})
