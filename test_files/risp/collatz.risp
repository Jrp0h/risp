(defun main {
  (print (count_collatz 19))
  (exit)
})

(defun count_collatz $numer {
  (defvar $steps 0)
  (defvar $current $numer)

  (while 1 {
    (setvar $current (collatz $current))
    (if (= $current 1) {
     (return $steps)   
    } else {
      (setvar $steps (+ $steps 1))
    })
  })
})

(defun collatz $num {
  (if (= (% $num 2) 0) {
    (return (/ $num 2))   
  } else {
    (return (+ (* $num 3) 1))   
  })
})
